  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "RegisterRequest": {
        "required": ["email", "password", "username", "termsAccepted"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Электронная почта пользователя",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "minLength": 6,
            "description": "Пароль пользователя (минимум 6 символов)",
            "example": "password123"
          },
          "username": {
            "type": "string",
            "description": "Отображаемое имя пользователя",
            "example": "Иван Иванов"
          },
          "termsAccepted": {
            "type": "boolean",
            "description": "Флаг принятия пользовательского соглашения",
            "example": true
          }
        }
      },
      "LoginRequest": {
        "required": ["email", "password"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "Электронная почта пользователя",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "minLength": 6,
            "description": "Пароль пользователя",
            "example": "password123"
          }
        }
      },
      "UpdateProfileRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "Новое отображаемое имя пользователя",
            "example": "Новое Имя"
          }
        }
      },
      "ChangeEmailRequest": {
        "required": ["newEmail", "password"],
        "type": "object",
        "properties": {
          "newEmail": {
            "type": "string",
            "format": "email",
            "description": "Новый email пользователя",
            "example": "newemail@example.com"
          },
          "password": {
            "type": "string",
            "description": "Текущий пароль пользователя для подтверждения",
            "example": "currentpassword123"
          }
        }
      },
      "ChangePasswordRequest": {
        "required": ["currentPassword", "newPassword"],
        "type": "object",
        "properties": {
          "currentPassword": {
            "type": "string",
            "description": "Текущий пароль пользователя",
            "example": "currentpassword123"
          },
          "newPassword": {
            "type": "string",
            "minLength": 6,
            "description": "Новый пароль пользователя (минимум 6 символов)",
            "example": "newpassword123"
          }
        }
      },
      "TestResultRequest": {
